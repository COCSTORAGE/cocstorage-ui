{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@assets": [
        "./src/assets"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@components/*": ["./src/components/*"],
      "@theme": [
        "./src/theme"
      ],
      "@theme/*": ["./src/theme/*"],
      "@types": [
        "./src/types"
      ],
      "@types/*": ["./src/types/*"]
    },
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/*.d.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "example",
    "dist"
  ]
}